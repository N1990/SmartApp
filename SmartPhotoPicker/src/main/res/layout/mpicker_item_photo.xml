<?xml version="1.0" encoding="utf-8"?>
<com.cmbb.smartkids.photopicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="1dip"
        fresco:actualImageScaleType="focusCrop"
        fresco:viewAspectRatio="1" />

    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/mpicker_photo_checkbox_bg" />

</com.cmbb.smartkids.photopicker.widget.SquareItemLayout>