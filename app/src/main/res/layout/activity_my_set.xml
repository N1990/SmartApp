                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_my_set_user_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:layout_toLeftOf="@+id/tv_my_set_user_introduce_right"
                    android:maxLength="5"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/tv_my_set_user_introduce_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_set_user_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:background="@android:color/white"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:text="配送地址"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_my_set_user_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:layout_toLeftOf="@+id/tv_my_set_user_delivery_address_right"
                    android:maxLength="5"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/tv_my_set_user_delivery_address_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


