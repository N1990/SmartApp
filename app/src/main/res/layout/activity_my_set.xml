<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.user.MySetActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_global_padding"
            android:layout_marginRight="@dimen/half_global_padding"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_my_set_user_header"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:background="@android:color/white"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:text="头像"
                    android:textColor="@android:color/darker_gray" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_my_set_user_header"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_my_set_user_header_right"
                    app:actualImageScaleType="centerCrop"
                    app:fadeDuration="300"
                    app:placeholderImage="@drawable/ic_default_header_bg"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@android:color/white"
                    app:roundingBorderWidth="1dp" />


                <ImageView
                    android:id="@+id/iv_my_set_user_header_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_my_set_user_nickname"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:background="@android:color/white"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:text="昵称"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_my_set_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.Smart.Body1"
                    android:layout_toLeftOf="@+id/tv_my_set_user_nickname_right"
                    android:textColor="@android:color/black" />


                <ImageView
                    android:id="@+id/tv_my_set_user_nickname_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_my_set_user_phone"
